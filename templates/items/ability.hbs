<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'DUST.AbilityName' }}">
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{labels.level}}
                </li>
                <li>
                    {{labels.school}}
                </li>
                <li>
                    {{> "dust-system.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "DUST.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "DUST.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "DUST.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "dust-system.item-description"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize "DUST.AbilityDetails" }}</h3>

            {{!-- Ability Level --}}
            <div class="form-group">
                <label>{{ localize "DUST.AbilityLevel" }}</label>
                <select name="system.level" data-dtype="Number">
                    {{#select system.level}}
                    {{#each config.abilityLevels as |name lvl|}}
                    <option value="{{lvl}}">{{name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>

            {{!-- Ability School --}}
            <div class="form-group">
                <label>{{ localize "DUST.AbilitySchool" }}</label>
                <select name="system.school">
                    {{selectOptions config.abilitySchools selected=system.school labelAttr="label" blank=""}}
                </select>
            </div>

            {{!-- Ability Components --}}
            <div class="ability-components form-group stacked">
                <label>{{ localize "DUST.AbilityComponents" }}</label>
                {{#each properties}}
                <label class="checkbox">
                    <input type="checkbox" name="system.properties.{{@key}}" {{checked selected}}> {{ label }}
                </label>
                {{/each}}
            </div>

            {{!-- Material Components --}}
            <div class="form-group stacked">
                <label>{{ localize "DUST.AbilityMaterials" }}</label>
                <input class="materials" type="text" name="system.materials.value" value="{{system.materials.value}}">
                {{#if system.materials.value}}
                <div class="ability-materials flexrow">
                    <label>{{ localize "DUST.Supply" }}</label>
                    {{numberInput system.materials.supply name="system.materials.supply" placeholder="0"}}
                    <label>{{ localize "DUST.CostGP" }}</label>
                    {{numberInput system.materials.cost name="system.materials.cost" placeholder="â€”"}}
                    <label>{{ localize "DUST.Consumed" }}</label>
                    <input type="checkbox" name="system.materials.consumed" {{checked system.materials.consumed}}>
                </div>
                {{/if}}
            </div>

            {{!-- Preparation Mode --}}
            <div class="form-group input-select">
                <label>{{ localize "DUST.AbilityPreparationMode" }}</label>
                <div class="form-fields">
                    <label class="checkbox prepared">
                        {{ localize "DUST.AbilityPrepared" }}
                        <input type="checkbox" name="system.preparation.prepared" {{checked system.preparation.prepared}}>
                    </label>
                    <select name="system.preparation.mode">
                        {{ selectOptions config.abilityPreparationModes selected=system.preparation.mode labelAttr="label" }}
                    </select>
                </div>
            </div>

            {{!-- Source Class --}}
            {{#if isEmbedded}}
            <div class="form-group input-select">
                <label>{{ localize "DUST.AbilitySourceClass" }}</label>
                <div class="form-fields">
                    <select name="system.sourceClass">
                        {{selectOptions document.parent.abilitycastingClasses selected=system.sourceClass
                                        labelAttr="name" blank=""}}
                    </select>
                </div>
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "DUST.AbilityCastingHeader" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "dust-system.item-activation"}}

            <h3 class="form-header">{{ localize "DUST.AbilityEffects" }}</h3>

            {{!-- Item Action Template --}}
            {{> "dust-system.item-action"}}

            {{!-- Ability Level Scaling --}}
            <div class="form-group">
                <label>{{ localize "DUST.LevelScaling" }}</label>
                <div class="form-fields">
                    <select name="system.scaling.mode">
                        {{#select system.scaling.mode}}
                        {{#each config.abilityScalingModes as |name key|}}
                        <option value="{{key}}">{{name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                    <input type="text" name="system.scaling.formula" value="{{system.scaling.formula}}"
                           placeholder="{{ localize 'DUST.ScalingFormula' }}" data-formula-editor>
                </div>
            </div>
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "dust-system.active-effects"}}
        </div>
    </section>
</form>
