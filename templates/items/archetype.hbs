<form class="{{cssArchetype}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img"/>

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'DUST.ArchetypeName' }}"/>
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{> "dust-system.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "DUST.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "DUST.Details" }}</a>
        <a class="item" data-tab="advancement">{{ localize "DUST.AdvancementTitle" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab flexrow active" data-group="primary" data-tab="description">
            {{editor enriched.description target="system.description.value" button=true editable=editable
                     engine="prosemirror" collaborate=false}}
        </div>

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Identifier --}}
            <div class="form-group">
                <label>{{ localize "DUST.Identifier" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.identifier" value="{{ system.identifier }}"
                           placeholder="{{ item.identifier }}">
                </div>
                <p class="hint">
                    {{{ localize "DUST.ArchetypeIdentifierHint" identifier=item.identifier }}}
                    {{ localize "DUST.IdentifierError" }}
                </p>
            </div>
                               
            {{!-- Starting Equipment --}}
            <h3 class="form-header">
                {{ localize "DUST.StartingEquipment.Title" }}
                <a class="config-button" data-action="starting-equipment"
                   data-tooltip="DUST.StartingEquipment.Action.Configure"
                   aria-label="{{ localize 'DUST.StartingEquipment.Action.Configure' }}">
                    <i class="fa-solid fa-gear" aria-hidden="true"></i>
                </a>
            </h3>
            {{#with system.startingEquipmentDescription}}{{{ this }}}{{else}}{{ localize "None" }}{{/with}}
            <div class="form-group">
                <label>{{ localize "DUST.StartingEquipment.Wealth.Label" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.wealth" value="{{ system.wealth }}">
                </div>
                <p class="hint">{{ localize "DUST.StartingEquipment.Wealth.Hint" }}</p>
            </div>

        </div>

        {{!-- Advancement Tab --}}
        {{> "dust-system.item-advancement"}}

    </section>
</form>
