<section class="flexcol">
    <fieldset class="card">
        <legend>{{ localize "DUST.Habitat.Configuration.Legend" }}</legend>
        <ol class="unlist form-grid form-grid-50" style="--rows: {{ rows }};">
            {{#each habitats}}
            <li>
                <label class="checkbox">
                    <span>{{ label }}</span>
                    <dust-system-checkbox name="{{ id }}.type" {{#if checked}}checked{{/if}}
                                    {{#if disabled}}disabled{{/if}}></dust-system-checkbox>
                </label>
            </li>
            {{#if subtypes}}
            <li class="subtypes">
                <input type="text" name="{{ id }}.subtype" value="{{ subtype }}"
                       aria-label="{{ localize "DUST.Habitat.Configuration.Subtype" type=label }}">
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </fieldset>
    <fieldset class="card">
        <legend>{{ localize "DUST.Habitat.Configuration.Custom" }}</legend>
        {{ formInput custom.field value=custom.value name=custom.name }}
        <p class="hint">{{ localize "DUST.SpecialHint" }}</p>
    </fieldset>
</section>
