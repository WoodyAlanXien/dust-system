<section class="flexcol">
    <fieldset class="card">
        <legend>{{ localize "TYPES.Item.class" }}</legend>
        <div class="form-group">
            <label>{{ localize "DUST.ClassMakeOriginal" }}</label>
            <select name="system.details.originalClass" {{ disabled flags.disabled }}>
                {{ selectOptions flags.classes selected=system.details.originalClass }}
            </select>
            <p class="notes">{{ localize "DUST.ClassMakeOriginalHint" }}</p>
        </div>
    </fieldset>

    {{#each flags.sections}}
    <fieldset class="card">
        <legend>{{ label }}</legend>
        {{#each fields}}
        {{ formField field name=name value=value choices=choices input=input disabled=@root.flags.disabled }}
        {{/each}}
    </fieldset>
    {{/each}}
</section>
