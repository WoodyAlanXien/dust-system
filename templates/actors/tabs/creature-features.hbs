{{!-- Classes --}}
{{#unless isNPC}}
    {{> "dust-system.actor-classes" }}
{{/unless}}

{{!-- Features --}}
<{{elements.inventory}} class="inventory-element" v2>

    {{!-- Searching, Filtering, & Sorting --}}
    <item-list-controls for="features" label="{{ localize "DUST.FeatureSearch" }}" sort="toggle" group
                        group-label="{{ localize "DUST.FilterGroupOrigin" }}" collection="items">
        <datalist>
            {{#each filters}}
            <option value="{{ key }}">{{ localize label }}</option>
            {{/each}}
        </datalist>
    </item-list-controls>

    {{!-- Features List --}}
    <section class="items-list features-list" data-item-list="features">

        {{!-- Sections / Categories --}}
        {{#each sections}}
        <div class="items-section card" {{ dust-system-dataset dataset }}>

            {{!-- Section Header --}}
            <div class="items-header header">
                <h3 class="item-name">{{ localize label }}</h3>
                {{#each categories}}
                <div class="item-header {{ classes }}">{{#if label}}{{ localize label }}{{/if}}</div>
                {{/each}}
            </div>

            {{!-- Section Contents --}}
            <ol class="item-list unlist">
                {{#each items as |item|}}
                {{#dust-system-itemContext item as |ctx|}}

                {{!-- Items --}}
                <li class="item collapsible {{#unless ctx.isExpanded}}collapsed{{/unless}}" data-item-id="{{ item.id }}"
                    data-entry-id="{{ item.id }}" data-item-name="{{ item.name }}" data-item-sort="{{ item.sort }}"
                    data-grouped="{{ ctx.group }}" data-ungrouped="{{ ctx.ungroup }}" data-uuid="{{ item.uuid }}">

                    <div class="item-row">

                        {{!-- Item Name --}}
                        <div class="item-name item-action item-tooltip {{ @root.rollableClass }}" role="button"
                             data-action="use" aria-label="{{ item.name }}">
                            <img class="item-image gold-icon" src="{{ item.img }}" alt="{{ item.name }}"
                                 draggable="false">
                            <div class="name name-stacked">
                                <span class="title">{{ item.name }}</span>
                                {{#if ctx.subtitle}}
                                <span class="subtitle">{{{ ctx.subtitle }}}</span>
                                {{/if}}
                            </div>
                            <div class="tags">
                                {{#each item.labels.properties}}
                                {{#if icon}}
                                <span aria-label="{{ label }}">
                                    <dust-system-icon src="{{ icon }}"></dust-system-icon>
                                </span>
                                {{/if}}
                                {{/each}}
                            </div>
                        </div>

                        {{#each ../categories}}
                            {{> (lookup . "itemPartial") item=item ctx=ctx }}
                        {{/each}}

                    </div>

                    <div class="item-description collapsible-content">
                        <div class="wrapper">

                            {{!-- Activities --}}
                            {{#if ctx.activities.length}}
                            <div class="activities">
                                {{#each ctx.activities}}
                                {{> "dust-system.activity-row-summary" categories=../../categories }}
                                {{/each}}
                            </div>
                            {{/if}}

                            {{!-- Item Description --}}
                            {{#if ctx.isExpanded}}
                            {{> "dust-system.item-summary" ctx.expanded }}
                            {{/if}}
                        </div>
                    </div>

                </li>

                {{/dust-system-itemContext}}
                {{/each}}
            </ol>

        </div>
        {{/each}}

    </section>

</{{elements.inventory}}>
