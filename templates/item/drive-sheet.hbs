<div class="drive-sheet">
<header class="window-header flexrow">
  <h4 class="window-title">{{name}}</h4>
  <nav class="window-controls">
    <a class="configure-drive" title="Configure Drive" aria-label="Configure Drive">
      <i class="fas fa-cog"></i>
    </a>
    {{window-controls}}
  </nav>
</header>
<header class="item-header">
    <h3 class="item-name">{{name}}</h3>
  </header>
  <div class="item-details">
    <p><strong>Description:</strong></p>
    <p>{{system.description}}</p>
    <p><strong>Effect:</strong> {{system.effect}}</p>
    {{#if system.bonus}}
      <p><strong>Bonus:</strong> +{{system.bonus}}</p>
    {{/if}}
  </div>
  <!-- Optional: Add a button to trigger the drive effect -->
  <div class="item-controls">
    <button class="trigger-drive" title="Activate Drive" aria-label="Activate Drive">Activate</button>
  </div>
</div>
